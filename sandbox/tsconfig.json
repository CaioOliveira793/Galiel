{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
		"declaration": false,
		"sourceMap": false,
		"allowJs": true,
		"isolatedModules": false,
    "baseUrl": ".",
    "paths": {
			"@engine/*": ["../src/*"],
			"*" : ["../src/@types/*"]
		},
    "rootDirs": [
			".",
			"../src",
		],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
		"preserveConstEnums": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": [
		"./**/*",
		"../src/**/*",
		"../src/@types/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}

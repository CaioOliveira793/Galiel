{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
		"declaration": false,
		"sourceMap": false,
		"allowJs": true,
		"isolatedModules": false,
    "baseUrl": ".",
    "paths": {
			"@engine/*": ["../src/*"]
		},
    "rootDirs": [
			".",
			"../src"
		],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
		"preserveConstEnums": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}

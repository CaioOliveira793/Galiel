{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
		"declaration": true,
		"sourceMap": true,
		"lib": ["ES2017", "DOM"],
    "outDir": "dist",
		"rootDir": "./src",
    "baseUrl": "./src",
    "paths": {},
		"typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "strict": true,
		"preserveConstEnums": true,
		"removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"sandbox",
		"test"
	]
}

{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
		"declaration": true,
		"sourceMap": true,
		"lib": ["ES2017", "DOM"],
    "outDir": "dist",
		"rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
			"*" : ["./@types/*"]
		},
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
		"preserveConstEnums": true,
		"removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
	"include": [
		"src/**/*",
		"src/@types/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"sandbox",
		"test"
	]
}
